{
  "manifest_version": 3,
  "name": "Show My Password",
  "version": "1.0.0",
  "description": "Password input alanlarının yanında şifre göster/gizle toggle butonu ekler",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

