{
  "manifest_version": 3,
  "name": "PassMind",
  "version": "1.0.0",
  "description": "Show/hide all password fields from drawer using corner button. View your passwords with one click.",
  "minimum_chrome_version": "88",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "PassMind - Show/hide all passwords (Right-click for options)"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://chrome.google.com/webstore/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
