{
  "manifest_version": 3,
  "name": "PassMind",
  "version": "1.0.0",
  "description": "Ekranın köşesindeki buton ile drawer üzerinden tüm password alanlarını göster/gizle",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

